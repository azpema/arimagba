{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                //"${file}",
                "${fileDirname}/*.cpp",
                "${fileDirname}/cpu/*.cpp",
                "${fileDirname}/cpu/op/*.cpp",
                "${fileDirname}/cpu/op/arm/*.cpp",
                "${fileDirname}/cpu/op/fields/*.cpp",
                "${fileDirname}/cpu/op/thumb/*.cpp",
                "${fileDirname}/cpu/registers/*.cpp",
                "${fileDirname}/cpu/components/*.cpp",
                "${fileDirname}/memory/*.cpp",
                "${fileDirname}/utils/*.cpp",
                "${fileDirname}/graphics/*.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-O0",
                "-lSDL2",
                "-I/usr/include/SDL2 -D_REENTRANT",
                "-lSDL2_image"
                
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}